<div>
    <h1>{{assignment.name}}</h1>
    <p>{{assignment.description}}</p>
    <span>{{assignment.dueDate}}</span>
    <form method="POST" action="/class/{{class.id}}/{{assignment.id}}" enctype="multipart/form-data">

{{#if isStudent}}
    <table>
        <tr>
            <td colspan="3">
                <h1>{{class.name}}</h1>
            </td>
        </tr>
        <tr>
            <th>Assignment Name</th>
            <th>Due Date</th>
            <th>Grade</th>
        </tr>
        {{#each assignments}}
            <tr>
                <td>
                    <a href="/class/{{../class.id}}/{{id}}">{{assignmentName}} </a>
                </td>
                <td>
                    <label>{{dueDate}}</label>
                </td>
                <td>
                    <label>{{grade}}</label>
                </td>
            </tr>
        {{/each}}
{{else}}
    <table>
        <tr>
            <td colspan="2">
                <h1>{{class.name}}</h1>
            </td>
        </tr>
        <tr>
            <th>Student Name</th>
            {{#each assignments}}
                <th>{{name}}</th>
            {{/each}}
        </tr>
        {{#each students}}
            <tr>
                <td>{{name}}</td>
                {{#each assignments}}
                    <td>
                        <a href="/class/{{../../class.id}}/{{@index}}?student={{../_id}}">{{this}}</a>
                    </td>
                {{/each}}
            </tr>
        {{/each}}
        <tr>
            <td colspan="2">
                <a href="/class/{{class.id}}/assignment" class="customButton">Create an assignment</a>
            </td>
            <td colspan="2">
                <a href="/class/{{class.id}}/announcement" class="customButton">Create an announcement</a>
            </td>
            <td colspan="2">
                <a href="/class" onclick="del({{class.id}})" class="customButton">Delete class</a>
            </td>
        </tr>
    <script src="/public/js/delClass.js"></script>
{{/if}}
    <tr>
        <td colspan="2">
            <h5>Announcements for {{class.name}}</h5>
        </td>
    </tr>
    <tr>
        <td colspan="2">
            <div id="announcements">
                {{#each announcements}}
                    <h5>{{name}}</h5>
                    <p>{{description}}</p>
                {{/each}}
            </div>
        </td>
    </tr>
    <tr>
        <td>
            <a href="/class" class="customButton">Back</a>
        </td>
        <td>
            <a href="/logout" class="customButton">Logout</a>
        </td>
    </tr>
</table>
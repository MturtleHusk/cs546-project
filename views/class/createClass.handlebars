 <form id="class-form">
     <h1>Class Creation</h1>
     <table>
        <tr>
            <td>
                <label for="name">Class Name</label>
            </td>
            <td>
                <input id="name" type="text" placeholder="class name" required>
            </td>
        </tr>

        <tr >
            <td colspan="2">
                <label for="student">Students</label>
            </td>
        </tr>
        <tr>
            <td>
                <input id="student" placeholder="studentID" pattern="[0-9]{8}">
            </td>
            <td>
                <button id="add-student" type="button" class="customButton">Add Student</button>
            </td>
        </tr>

        <tr>
            <td>
                <div id="error" class="error"></div>
            </td>
        </tr>
         <tr>
             <td>
                 <ul id="students"></ul>
             </td>
         </tr>
        <tr>
            <td colspan="2">
                <button class="customButton" type="submit">Create</button>
            </td>
        </tr>
     <tr>
         <td colspan="2">
             <a href="/class" class="customButton buttons">Back To Class List</a>
         </td>
     </tr>
     <tr class="buttons">
         <td colspan="2">
             <a href="/logout" class="customButton buttons">Logout</a>
         </td>
     </tr>
     </table>
    </form>
<script src="/public/js/class.js"></script>
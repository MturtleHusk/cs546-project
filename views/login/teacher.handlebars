<form method="POST" action="/new/teacher">
    <h1>Teacher Creation</h1>
    <table border="0">
        <tr>
            <td>
                <label for="teacherID">Teacher ID</label>
            </td>
            <td>
                <input id="teacherID" name="_id" type="number" pattern="[0-9]{8}" placeholder="10000000" required>
            </td>
        </tr>

        <tr>
            <td>
                <label for="first-name">First Name</label>
            </td>
            <td>
                 <input id="first-name" name="firstName" type="text" placeholder="First Name" required>
            </td>
        </tr> 
      
        <tr>
            <td>
               <label for="last-name">Last Name</label>
            </td>
            <td>
               <input id="last-name" name="lastName" type="text" placeholder="Last Name" required>
            </td>
        </tr>
    
        <tr>
            <td>
                <label for="username">Username</label>
            </td>
            <td>
                <input id="username" name="username" type="text" placeholder="Username" required>
            </td>
        </tr>
    
        <tr>
            <td>
                <label for="password">Password</label>
            </td>
            <td>
                <input id="password" name="password" type="password" placeholder="Password" required>
            </td>
        </tr>
       
        <tr>
            <td>
                <label for="confirm-password">Confirmed Password</label>
            </td>
            <td>
                <input id="confirm-password" type="password" placeholder="Confirm Password" required>
            </td>
        </tr>   
    
        <tr>
            <td colspan="2">
                <button class="customButton" type="submit">Create</button>
            </td>
        </tr> 
</form>
{{#if hasErrors}}
    <ul class="error-list">
        {{#each errors}}
            <li>
                {{this}}
            </li>
        {{/each}}
    </ul>
{{/if}}
    <tr>
        <td colspan="2">
           <a href="/login">Back To Login</a>
         </td>
    </tr>
</table>
<script src="/public/js/teacher.js"></script>
